.pc-component-short-list
	display inline-block
	font-family "Courier New", Courier, monospace
	background-color lightslategrey
	border solid rgba(255, 255, 255, 0.3) 2px
	border-radius 10px

	&>.total-label
		float left
		font-weight bolder
		margin-left 5px
		color #ffffff

	&>.total-price
		float right
		font-weight bolder
		display inline-block
		color rgba(0, 0, 0, 0.7)

		&>.min
			float left
			border-radius: 10px
			padding 0 3px 0 3px
			background-color rgba(150, 255, 150, 0.7)

		&>.max
			float right
			border-radius: 10px
			padding 0 3px 0 3px
			background-color rgba(255, 150, 150, 0.7)